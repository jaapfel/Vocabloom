<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp" tools:context="com.jrn.vocabloom.results">

    <TextView android:text="Word Usage" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/wordUsage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="center"
        android:layout_below="@+id/wordUsage"
        android:background="#008000"
        android:id="@+id/scan_time">
        <TextView android:text="Scan: " android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:id="@+id/scanTime" />

        <TextView android:text="" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/scanTime"
            android:id="@+id/time" />
    </RelativeLayout>

    <TextView android:text="Swipe left to view synonyms." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:gravity="center"
        android:layout_below="@+id/scan_time"
        android:id="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:divider="#008000"
        android:dividerHeight="1px"
        android:layout_alignParentStart="true"
        android:paddingBottom="52dp"
        android:layout_below="@+id/description" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:id="@+id/backButton"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/bottom_buffer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_buffer"
        android:textSize="10pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>

</RelativeLayout>