<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp" tools:context="com.jrn.vocabloom.main_menu">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/textView" />

    <ImageView android:src="@drawable/vocabloom"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:id="@+id/icon"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:id="@+id/scanButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:id="@+id/reviewButton"
        android:layout_below="@+id/scanButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
